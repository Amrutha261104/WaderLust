<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
   <div class="col-8 offset-2" >
    <br /><br />
    <h2>create a new listing</h2>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div  class="mb-3">
        <lable for ="title" class="form-label">Enter Title</lable>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
        <div class="valid-feedback">title looks good!</div>
    </div>

    <div  class="mb-3">
        <lable for ="description" class="form-label">Enter description</lable>
        <textarea name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback">please enter valid description</div>
    </div>
 
    
   
    <div  class="mb-3">
         <lable for ="image" class="form-label">upload image </lable>
         <input name="listing[image][url]"  type="file" class="form-control"  />
         required
    </div>

    <div class="row">
        <div  class="mb-3 col-md-4">
         <lable for ="price" class="form-label">Enter price</lable>
         <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
         <div class="invalid-feedback">please enter valid price</div>

    </div>
    <div  class="mb-3 col-md-8">
        <lable for ="country" class="form-label">Enter country</lable>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
        <div class="invalid-feedback">please enter valid country</div>
    </div>

    </div>
    
    
    <div  class="mb-3">
        <lable for ="location" class="form-label">Enter location</lable>
        <input name="listing[location]" placeholder="enter location" type="text"  class="form-control" required />
        <div class="invalid-feedback">please enter valid location</div>

    </div>

    <br /><br />
    
    <button class="btn btn-dark add-btn mt-3">add</button>
    <br /><br />

</form>
</div>
</div>
